<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_collapseParallaxMultiplier="1.0">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:visibility="gone"
        app:layout_anchorGravity="center_vertical|center_horizontal"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/clientGetTripsInfoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="clientGetTripsInfo"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_button_size"
                />

            <TextView
                android:id="@+id/driverGetTripsInfoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="driverGetTripsInfo"
                android:textSize="@dimen/text_button_size"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/clientUserWantsToOrderTaxiAgree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:gravity="start"
                android:text="clientUserWantsToOrderTaxAgree"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_button_size"
                />

            <TextView
                android:id="@+id/driverMessageSyncTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:gravity="start"
                android:text="driverMessageSync"
                android:textSize="@dimen/text_button_size"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/orderAgreeFromDriverTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:gravity="start"
                android:text="driverUserWantsToOrderTaxiAgree"
                android:textSize="@dimen/text_button_size"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:id="@+id/orderDisagreeFromDriverTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:gravity="start"
                android:text="driverUserWantsToOrderTaxiDisagree"
                android:textSize="@dimen/text_button_size"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:id="@+id/clientStatusOrdersTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="clientStatusOrdersTextView"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_button_size"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:id="@+id/clientWantsCancelOrderTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="clientUserWantsToCancelOrder"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_button_size"
                />

            <TextView
                android:text="driverUserWantsToCancelOrderAgree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_button_size"
                android:id="@+id/driverUserWantsToCancelOrderAgreeTextView"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/isTaxiSetOffToTheClientAgree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:gravity="start"
                android:text="driverServerTaxiSetOffToTheClientAgree"
                android:textSize="@dimen/text_button_size"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/isTaxiSetOffToTheClientDisagree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:gravity="start"
                android:text="driverServerTaxiSetOffToTheClientDisagree"
                android:textSize="@dimen/text_button_size"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">


            <TextView
                android:id="@+id/orderStatusChangedOnProgressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:gravity="start"
                android:text="driverOrderStatusChanged - inProgress"
                android:textSize="@dimen/text_button_size"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">


            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:gravity="start"
                android:text="driverOrderStatusChanged - completed"
                android:textSize="@dimen/text_button_size"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:id="@+id/clientRateDriverAfterTripTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="clientRateDriverAfterTrip"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_button_size"
                />

        </TableRow>


    </TableLayout>


</android.support.design.widget.CoordinatorLayout>